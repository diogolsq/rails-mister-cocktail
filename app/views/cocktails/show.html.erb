<div class="getting-margin">
  <h1><%= @cocktail.name %></h1>
  <div class="img-show">
    <% if @cocktail.image_url %>
      <%= image_tag(@cocktail.image_url) %>
    <% end %>
  </div>
  <hr>



  <div class="show-description-card">
    <h2> How to do it</h2>
    <%= link_to edit_cocktail_path(@cocktail) do %>
      <i class="far fa-edit"></i>
    <% end %>
    <p><%= @cocktail.description %></p>
  </div>


  <div class="card-ingredient">
    <div class="card-ingredient-header">
      <h3>Ingredients</h3>
       <%= link_to new_cocktail_dose_path(@cocktail) do %>
        <i class="fas fa-plus"></i>
       <% end %>
    </div>

    <% @ing_dose_pair.each do |ingredient, dose| %>
        <p><%= ingredient.name %> - <%= dose.description %>
          <%= link_to cocktail_dose_path(@cocktail, dose), method:'DELETE', data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </p>
    <% end %>
  </div>



  <br>
  <%= link_to 'Back to HomePage', cocktails_path , class:'btn btn-secondary' %>

</div>
